<!-- res/values/styles.xml -->
<resources>

    <!-- Base style for the spinner item -->
    <style name="SpinnerTextStyle">
        <item name="android:textSize">70sp</item>
        <item name="android:textColor">#333333</item> <!-- Change this color code -->
    </style>

    <!-- Style for the Spinner -->
    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">#E6E6E6</item> <!-- Set your desired background color -->
        <item name="android:dropDownVerticalOffset">50dp</item> <!-- Adjust dropdown offset as needed -->
        <item name="android:popupBackground">#E6E6E6</item> <!-- Set your desired dropdown background color -->
    </style>

    <!-- Style for the Priority Spinner -->
    <style name="SpinnerPriorityStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:dropDownItemStyle">@style/SpinnerTextStyle</item>
    </style>

    <!-- Style for the Category Spinner -->
    <style name="SpinnerCategoryStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:dropDownItemStyle">@style/SpinnerTextStyle</item>
    </style>

    <!-- Style for the Status Spinner -->
    <style name="SpinnerStatusStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:dropDownItemStyle">@style/SpinnerTextStyle</item>
    </style>

    <!-- Style for the Spinner Dropdown Item -->
    <style name="SpinnerDropdownItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textSize">70sp</item>
        <item name="android:textColor">#333333</item> <!-- Change this color code -->
    </style>

</resources>
